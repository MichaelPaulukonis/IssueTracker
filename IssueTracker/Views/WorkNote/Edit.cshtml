@model IssueTracker.Models.WorkNote

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>WorkNote</legend>

        @Html.HiddenFor(model => model.WorkNoteId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Detail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Detail)
            @Html.ValidationMessageFor(model => model.Detail)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LoggedDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LoggedDate)
            @Html.ValidationMessageFor(model => model.LoggedDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IssueId, "AttachedIssue")
        </div>
        <div class="editor-field">
            @Html.DropDownList("IssueId", String.Empty)
            @Html.ValidationMessageFor(model => model.IssueId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EnteredBy)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EnteredBy)
            @Html.ValidationMessageFor(model => model.EnteredBy)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
